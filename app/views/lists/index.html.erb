<div class="banner">
  <h1>Save any king of movies</h1>
</div>

<div class="container">
  <div class="d-flex justify-content-between mt-5 align-items-center">
    <h2>My lists</h2>
    <%= link_to "Create a movie list", new_list_path, class:"button-add" %>
  </div>

  <ul class="container-lists">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <li class="card-list"><%= list.name %></li>
      <% end %>
    <% end %>
  </ul>
</div>
